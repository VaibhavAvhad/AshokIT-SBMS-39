package com.ashokit;

public class TestClass {
	public static void main(String[] args) {
     
		// Field Injection (not recommended)
         RestaurantService restaurant1 = new RestaurantService();
         restaurant1.collectBill(10);// NullPointerException if not initialized
   
		
		
		/*
		 * // Injecting dependent obj into target class obj using target class
		 * constructor is called as CI.
		 * 
		 * RestaurantService service = new RestaurantService(new DebitCardPayment()); //
		 * CI
		 * 
		 * // The process of injecting dependent obj into target obj is called as //
		 * dependency injection (DI).
		 * 
		 * 
		 * //RestaurantService service= new RestaurantService(); // service.payment =
		 * new DebitCardPayment(); // FI
		 * 
		 * // Injecting dependent obj into target class obj using target class setter //
		 * method is called as SI.
		 * 
		 * service.setPayment(new CreditCardPayment());// SI
		 * 
		 * service.collectBill(100);
		 */
	}

}
